{
  "version": 2,
  "builds": [
    {
      "src": "**/*.{html,js,css,png,jpg,jpeg,gif,svg,ico,json}",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "WEB_SERVER_URL": "https://ixn-web-app.onrender.com",
    "WEBSOCKET_URL": "https://ixn-web-app.onrender.com"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ]
}